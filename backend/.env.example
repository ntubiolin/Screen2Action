# OpenAI Configuration (for MCP intelligent tasks)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Azure OpenAI Configuration (alternative to OpenAI)
# If configured, Azure OpenAI will take precedence over regular OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Ollama Configuration (alternative to OpenAI)
OLLAMA_MODEL=llama3.2
OLLAMA_BASE_URL=http://localhost:11434

# MCP Server API Keys (optional, for specific servers)
BRAVE_API_KEY=your-brave-api-key-here
GITHUB_TOKEN=your-github-token-here
DATABASE_URL=postgresql://user:password@localhost/dbname

# Application Settings
LOG_LEVEL=INFO
DEBUG=false

# Storage Settings
# Unified recordings directory used by both Electron and Python
# Precedence: S2A_RECORDINGS_DIR > config/app.json > ~/Documents/Screen2Action/recordings
# Example for macOS (zsh): export S2A_RECORDINGS_DIR=~/Screen2Action/recordings
S2A_RECORDINGS_DIR=