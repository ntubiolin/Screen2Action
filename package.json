{
  "name": "screen2action",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run dev:renderer & npm run dev:electron",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json --watch & nodemon --delay 2 --watch dist/main --exec electron . --ext js",
    "dev:review": "vite serve --config vite.config.dev.mjs",
    "test:review": "./test-review-simple.sh",
    "test:review:full": "./test-review-full.sh",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "build:dmg": "chmod +x scripts/build-dmg.sh && scripts/build-dmg.sh",
    "bundle:backend": "node scripts/bundle-backend.js",
    "verify:build": "chmod +x scripts/verify-build.sh && scripts/verify-build.sh",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:backend": "cd backend && uv run pytest tests/unit/test_llm_service.py -x -k 'not test_initialization'",
    "test:all": "npm run test:coverage && npm run test:backend",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:headed": "npm run build && playwright test --headed",
    "test:e2e:debug": "npm run build && playwright test --debug",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "prepare": "husky",
    "docker:build": "chmod +x scripts/docker-build.sh && scripts/docker-build.sh",
    "docker:build:mac": "chmod +x scripts/docker-build.sh && scripts/docker-build.sh --target mac",
    "docker:build:win": "chmod +x scripts/docker-build.sh && scripts/docker-build.sh --target win",
    "docker:build:linux": "chmod +x scripts/docker-build.sh && scripts/docker-build.sh --target linux",
    "docker:build:clean": "chmod +x scripts/docker-build.sh && scripts/docker-build.sh --clean",
    "docker:dev": "docker-compose up dev",
    "docker:base:build": "chmod +x scripts/docker-base-build.sh && scripts/docker-base-build.sh",
    "docker:base:check": "npm run docker:base:build -- --check",
    "docker:base:force": "npm run docker:base:build -- --force",
    "docker:ci:build": "docker build -f Dockerfile.optimized -t screen2action:ci ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "husky": "^9.1.6",
    "jest": "^30.1.0",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zustand": "^5.0.7"
  }
}
